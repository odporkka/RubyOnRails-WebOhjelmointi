<h2>Breweries</h2>

<div style="border-style: solid;">
  brewerylist-name-true: <%= ActionController::Base.new.fragment_exist?( 'brewerylist-name-true' ) %>
  <br>
  brewerylist-name-false: <%= ActionController::Base.new.fragment_exist?( 'brewerylist-name-false' ) %>
  <br>
  brewerylist-year-true: <%= ActionController::Base.new.fragment_exist?( 'brewerylist-year-true' ) %>
  <br>
  brewerylist-year-false: <%= ActionController::Base.new.fragment_exist?( 'brewerylist-year-false' ) %>
  <br>
  current: <%= "brewerylist-#{@order}-#{@order_asc}" %>
</div>

<% cache "brewerylist-#{@order}-#{@order_asc}", skip_digest: true do %>

<h3>Active</h3>

<p> Number of active breweries: <%= @active_breweries.count %> </p>

<%= render 'list', breweries: @active_breweries %>

<h3>Retired</h3>

<p> Number of retired breweries: <%= @retired_breweries.count %> </p>

<%= render 'list', breweries: @retired_breweries %>

<br>
<% end %>

<%= link_to 'New Brewery', new_brewery_path, class: "btn btn-primary" %>
