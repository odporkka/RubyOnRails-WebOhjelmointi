<p id="notice"><%= notice %></p>

<%= form_tag places_path do %>
    City: <%= text_field_tag :city, params[:city] %>
    <%= submit_tag "Search" %>
<% end %>

<% if @places %>
    <table>
      <thead>
      <% Place.rendered_fields.each do |f| %>
          <th><%=f %></th>
      <% end %>
      </thead>
      <% @places.each do |place| %>
          <tr>
            <% Place.rendered_fields.each do |f| %>
                <% if f.eql?(:name)%>
                    <td><%= link_to place.send(f), place_path(place.id)%></td>
                <% else %>
                    <td><%= place.send(f) %></td>
                <% end %>
            <% end %>
          </tr>
      <% end %>
    </table>
<% end %>