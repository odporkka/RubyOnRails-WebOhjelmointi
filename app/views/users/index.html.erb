<h2>Users</h2>

<table class="table table-hover">
  <thead>
  <tr>
    <th>Username</th>
    <th>Ratings</th>
    <th>Average</th>
    <th>Joined</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @users.each do |user| %>
      <tr>
        <td><%= link_to user.username, user %></td>
        <td><%= user.ratings.count %></td>
        <td><%= round(user.average_rating) %></td>
        <td><%= user.created_at.to_date %></td>
        <% if current_user && current_user.admin %>
            <% if user.banned %>
                <td><span class="label label-info">frozen</span></td>
            <% else %>
                <td></td>
            <% end %>
        <% end %>
      </tr>
  <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New User', new_user_path %>
