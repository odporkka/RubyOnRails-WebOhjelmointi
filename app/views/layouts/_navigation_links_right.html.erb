<% if not current_user.nil? %>
    <li role="presentation" class="dropdown">
      <a class="dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">
        <span class="glyphicon glyphicon-user"></span> <%= current_user.username %> <span class="caret"></span>
      </a>
      <ul class="dropdown-menu">
        <li><%= link_to 'My page', current_user %></li>
        <li><%= link_to 'Rate a beer', new_rating_path %></li>
        <li><%= link_to 'Join a club', new_membership_path %></li>
        <li>
          <%= link_to signout_path, method: :delete do %>
              <span class="glyphicon glyphicon-log-in"></span> Log out
          <% end %>
        </li>
      </ul>
    </li>
<% else %>
    <li>
      <%= link_to signin_path do %>
          <span class="glyphicon glyphicon-log-in"></span> Login
      <% end %>
    </li>
    <li>
      <%= link_to signup_path do %>
          <span class="glyphicon glyphicon-user"></span> Sign Up
      <% end %>
    </li>
<% end %>